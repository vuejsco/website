---
import '@fontsource/inter'

interface Props {
  title: string
  description?: string
}

const { title, description = 'Vue JS Colombia - Comunidad de Vue.js en Colombia' } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <header class="bg-white shadow-sm">
      <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 justify-between">
          <div class="flex">
            <a href="/" class="flex items-center">
              <img src="/logo.svg" alt="Vue JS Colombia" class="h-8 w-auto" />
              <span class="ml-2 text-xl font-bold text-vue-blue">Vue JS Colombia</span>
            </a>
          </div>
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <a
              href="/"
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-vue-blue"
            >
              Inicio
            </a>
            <a
              href="/about"
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-vue-blue"
            >
              Nosotros
            </a>
            <a
              href="/events"
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-vue-blue"
            >
              Eventos
            </a>
            <a
              href="/resources"
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-vue-blue"
            >
              Recursos
            </a>
            <a
              href="/blog"
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-vue-blue"
            >
              Blog
            </a>
            <a
              href="/contact"
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-vue-blue"
            >
              Contacto
            </a>
          </div>
          <div class="flex items-center">
            <a
              href="https://meetup.com/vuejsco"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center rounded-md border border-transparent bg-vue-green px-4 py-2 text-sm font-medium text-white hover:bg-vue-green/90"
            >
              Síguenos en Meetup
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="mt-12 bg-white">
      <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
          <div class="col-span-2">
            <img src="/logo.svg" alt="Vue JS Colombia" class="mb-4 h-8 w-auto" />
            <p class="text-sm text-gray-500">
              Vue JS Colombia es una comunidad de desarrolladores apasionados por Vue.js y
              JavaScript.
            </p>
          </div>
          <div>
            <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400">Comunidad</h3>
            <div class="mt-4 space-y-4">
              <a
                href="https://meetup.com/vuejsco"
                target="_blank"
                rel="noopener noreferrer"
                class="block text-base text-gray-500 hover:text-gray-900"
              >
                Meetup
              </a>
              <a
                href="https://www.youtube.com/@vuejsco"
                target="_blank"
                rel="noopener noreferrer"
                class="block text-base text-gray-500 hover:text-gray-900"
              >
                YouTube
              </a>
              <a
                href="https://github.com/vuejsco"
                target="_blank"
                rel="noopener noreferrer"
                class="block text-base text-gray-500 hover:text-gray-900"
              >
                GitHub
              </a>
              <a
                href="https://twitter.com/vuejsco"
                target="_blank"
                rel="noopener noreferrer"
                class="block text-base text-gray-500 hover:text-gray-900"
              >
                Twitter
              </a>
              <a
                href="https://bit.ly/3E4PWlY"
                target="_blank"
                rel="noopener noreferrer"
                class="block text-base text-gray-500 hover:text-gray-900"
              >
                Discord
              </a>
            </div>
          </div>
          <div>
            <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400">Legal</h3>
            <div class="mt-4 space-y-4">
              <a href="/privacy" class="block text-base text-gray-500 hover:text-gray-900">
                Política de Privacidad
              </a>
              <a href="/terms" class="block text-base text-gray-500 hover:text-gray-900">
                Términos de Uso
              </a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
