---
const stats = [
  {
    label: "Miembros Activos",
    value: "1,000+"
  },
  {
    label: "Eventos Realizados",
    value: "50+"
  },
  {
    label: "Proyectos Open Source",
    value: "20+"
  }
];
---
<div class="bg-vue-blue py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-3 lg:grid-cols-3">
      {stats.map(stat => (
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <dt class="text-sm font-medium text-gray-500 truncate">{stat.label}</dt>
            <dd class="mt-1 text-3xl font-semibold text-gray-900">{stat.value}</dd>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>